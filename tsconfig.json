{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2021"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_internals"]
}